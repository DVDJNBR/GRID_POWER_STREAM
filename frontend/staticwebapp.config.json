{
  "routes": [
    {
      "route": "/api/*",
      "rewrite": "/api/*"
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/_framework/*", "*.{css,scss,js,png,gif,ico,jpg,svg,woff,woff2}"]
  },
  "responseOverrides": {
    "401": { "rewrite": "/index.html" },
    "404": { "rewrite": "/index.html" }
  },
  "globalHeaders": {
    "Cache-Control": "no-store",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY"
  },
  "mimeTypes": {
    ".json": "application/json"
  }
}
